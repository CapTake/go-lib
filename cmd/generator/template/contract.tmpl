								continue
							}
							contract.{{$value.Type | ToLower }} <- {{$value.Type}}{
								Key: key,
								Value: value,
							}
						{{- end }}
						}
					}

				case events.ChannelOperations:
					items := msg.Body.([]interface{})
					for _, item := range items {
						tx, ok := item.(*events.Transaction)
						if !ok {
							continue
						}
						if tx.Parameter == nil {
