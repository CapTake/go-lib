func (contract *{{.TypeName}}) listen(ctx context.Context) {
	defer contract.wg.Done()

	for {
		select {
		case <-ctx.Done():
			return
		case msg := <- contract.tzktEvents.Listen():
			switch msg.Type {
			case events.MessageTypeData:

				switch msg.Channel {
				case events.ChannelBigMap:
					items := msg.Body.([]events.BigMapUpdate)
